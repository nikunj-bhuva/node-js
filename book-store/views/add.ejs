<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add New Book</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        background-color: #f8f9fa;
      }
      .form-container {
        background-color: #fff;
        border-radius: 10px;
        padding: 30px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
      }
      .book-card {
        border: none;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
      }
    </style>
  </head>
  <body>
    <div class="container my-5">
      <h2 class="text-center text-primary mb-4">Add a New Book</h2>
      <div class="form-container mx-auto" style="max-width: 500px">
        <form action="/bookadd" method="post">
          <div class="mb-3">
            <label for="bookName" class="form-label">Book Title</label>
            <input
              type="text"
              name="bookName"
              class="form-control"
              placeholder="Enter book title"
              required
            />
          </div>
          <div class="mb-3">
            <label for="Bookcatagary" class="form-label">Book Category</label>
            <select name="Bookcatagary" class="form-select" required>
              <option value="">Select Category</option>
              <option value="History">History</option>
              <option value="Science Fiction">Science Fiction</option>
              <option value="Biography">Biography</option>
              <option value="Mystery">Mystery</option>
              <option value="Business">Business</option>
            </select>
          </div>
          <div class="mb-3">
            <label for="bookprice" class="form-label">Book Price (₹)</label>
            <input
              type="text"
              name="bookprice"
              class="form-control"
              placeholder="Enter book price"
              required
            />
          </div>
          <button type="submit" class="btn btn-primary w-100">Add Book</button>
        </form>
      </div>

      <!-- Book List -->
      <h3 class="text-center text-success my-5">Our Book Collection</h3>
      <div class="row">
        <% bookData.forEach((data) => { %>
        <div class="col-md-4">
          <div class="card book-card mb-3">
            <div class="card-body">
              <h5 class="card-title text-primary">
                <strong>Book Name :</strong> <%= data.bookName %>
              </h5>
              <p class="card-text">
                <strong>Category :</strong> <%= data.Bookcatagary %>
              </p>
              <p class="card-text">
                <strong>Price :</strong> ₹<%= data.bookprice %>
              </p>
              <div class="d-flex justify-content-between">
                <a
                  href="/deletebook/<%= data.id %>"
                  class="btn btn-danger btn-sm"
                  >Delete</a
                >
                <a href="/update/<%= data.id %>" class="btn btn-primary btn-sm"
                  >Edit</a
                >
              </div>
            </div>
          </div>
        </div>
        <% }); %>
      </div>
    </div>
  </body>
</html>
